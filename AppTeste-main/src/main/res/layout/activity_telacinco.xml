<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E54A5"
    tools:context=".telacinco">

    <TextView
        android:id="@+id/txttelacinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Mudanças Climáticas"
        android:textColor="@color/white"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="330dp" />

    <TextView
        android:id="@+id/txttitulotelacinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Como evitar?"
        android:textColor="@color/white"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/txttextitelacinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="As mudanças climáticas são um desafio global complexo, mas existem várias ações que podemos tomar para diminuir seus efeitos e reduzir as emissões de gases de efeito estufa. Algumas maneiras para evitar a redução das queimas de combustíveis fósseis, como petróleo. Podemos fazer isso mudando nossas fontes de energia para outras mais limpas e renováveis."
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="436dp" />

    <Button
        android:id="@+id/btntelacinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="269dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-black"
        android:text="Proxímo"
        android:textColor="#2E54A5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttextitelacinco" />

    <ImageView
        android:id="@+id/imgtopotelacinco"
        android:layout_width="407dp"
        android:layout_height="309dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/txttelacinco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img2" />
</androidx.constraintlayout.widget.ConstraintLayout>