<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E54A5"
    tools:context=".telatres">

    <Button
        android:id="@+id/btntelatres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="269dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-black"
        android:text="Proxímo"
        android:textColor="#2E54A5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttextotelatres" />

    <ImageView
        android:id="@+id/imgtopotelatres"
        android:layout_width="416dp"
        android:layout_height="291dp"
        app:layout_constraintBottom_toTopOf="@+id/txttelatres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img2" />

    <TextView
        android:id="@+id/txttelatres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="sans-serif-black"
        android:text="Mudanças Climáticas"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgtopotelatres" />

    <TextView
        android:id="@+id/txttitulotelatres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Quem provoca?"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/txttextotelatres"
        android:layout_width="401dp"
        android:layout_height="263dp"
        android:fontFamily="sans-serif-black"
        android:text="Dentre diversos fatores, os principais motivos para o aumento dessas transformações climáticas são o aumento da geração de eletricidade e calor pela queima de combustíveis fósseis, que é responsável por boa parte das emissões globais. Outro motivo muito comum é o desmatamento florestal, que ocorre para criação de fazendas ou pastos, gera emissões, que acontecem pela liberação de carbono por meio das árvores que são cortadas."
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="386dp" />

</androidx.constraintlayout.widget.ConstraintLayout>